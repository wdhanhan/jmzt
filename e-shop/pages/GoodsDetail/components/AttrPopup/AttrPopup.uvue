<template>
  <cat-popup ref="CatPopup" mode="bottom">
    <view class="attr-info" :style="{ paddingBottom: (statusBarBottom + 20) + 'px' }">
      <!-- å…³é—­æŒ‰é’® -->
      <view class="close" @click="close">
        <image src="/static/images/icon/close_icon.png" class="image"></image>
      </view>

      <!-- é¡¶éƒ¨å•†å“ + å½“å‰é€‰ä¸­çš„ SKU -->
      <view class="goods-data">
        <view class="pic">
          <image :src="displayPic" class="image"></image>
        </view>
        <view class="data">
          <view class="title">
            <text class="text">{{ info.name }}</text>
          </view>
          <view class="attr">
            <text class="text">å·²é€‰ï¼š</text>
            <text class="text">{{ selectedSkuText }}</text>
          </view>
          <view class="price">
            <view class="selling-price">
              <text class="min">ï¿¥</text>
              <text class="max">{{ displayPrice }}</text>
            </view>
          </view>
        </view>
      </view>

      <!-- ğŸ‘‡ è¿™é‡Œæ”¹æˆï¼šä¸€æ¡ SKU ä¸€æ¡è®°å½•ï¼ˆä¸æ‹†åˆ†ç±»ï¼‰ -->
      <scroll-view class="attr-select">
        <view
          class="sku-item"
          v-for="(sku, index) in info.skus"
          :key="sku.sku_id || index"
          :class="{ active: index === selectedSkuIndex }"
          @click="selectSku(index)"
        >
          <view class="sku-left">
            <image
              v-if="sku.image || info.pic || (info.images && info.images.length)"
              :src="sku.image || info.pic || info.images[0]"
              class="sku-image"
            ></image>
          </view>

          <view class="sku-right">
            <view class="sku-name">
<text class="text">
  {{ formatSkuName(sku, index) }}
</text>
            </view>

            <view class="sku-price-stock">
              <text class="price">ï¿¥{{ sku.price || info.price || 0 }}</text>
              <text class="stock" v-if="sku.stock !== undefined">
                åº“å­˜ï¼š{{ sku.stock }}
              </text>
            </view>
          </view>
        </view>

        <!-- æ²¡æœ‰ SKU çš„å…œåº• -->
        <view v-if="!info.skus || info.skus.length === 0" class="empty-sku">
          <text class="text">æš‚æ— å¯é€‰è§„æ ¼</text>
        </view>
      </scroll-view>

      <!-- æ•°é‡ -->
      <view class="goods-number">
        <view class="title">
          <text class="text">æ•°é‡</text>
        </view>
        <view class="number">
          <view class="sub" @click="changeQty(-1)">
            <image src="/static/images/icon/sub_icon2.png" class="image"></image>
          </view>
          <view class="num">
            <text class="text">{{ quantity }}</text>
          </view>
          <view class="add" @click="changeQty(1)">
            <image src="/static/images/icon/add_icon2.png" class="image"></image>
          </view>
        </view>
      </view>

      <!-- åº•éƒ¨æŒ‰é’® -->
      <view class="attr-btn">
        <view class="btn" v-if="btnType === 'cart'" @click="onAddCart">
          <text class="text">åŠ å…¥è´­ç‰©è½¦</text>
        </view>
        <view class="btn" v-if="btnType === 'buy'" @click="onBuy">
          <text class="text">ç«‹å³è´­ä¹°</text>
        </view>
      </view>
    </view>
  </cat-popup>
</template>

<script>
import CatPopup from "@/components/CatPopup/CatPopup.uvue";

const API_BASE = "https://wdxwhdglzx.jzzw-tech.cn";

export default {
  components: {
    CatPopup,
  },

  props: {
    // ç›´æ¥ç”¨åç«¯ /api/products/:id è¿”å›çš„ data
    info: {
      type: Object,
      default() {
        return {
          id: 0,
          name: "",
          price: 0,
          pic: "",
          images: [],
          skus: [],
        };
      },
    },
  },

  data() {
    return {
      statusBarBottom: 0,
      btnType: "",           // 'cart' | 'buy'
      selectedSkuIndex: 0,   // å½“å‰é€‰ä¸­çš„ SKU ä¸‹æ ‡
      quantity: 1,           // æ•°é‡
    };
  },

  mounted() {
    const windowInfo = uni.getWindowInfo();
    this.statusBarBottom = windowInfo.safeAreaInsets
      ? windowInfo.safeAreaInsets.bottom
      : 0;

    // é»˜è®¤é€‰ä¸­ç¬¬ä¸€ä¸ª sku
    if (this.info && this.info.skus && this.info.skus.length > 0) {
      this.selectedSkuIndex = 0;
    }
  },

  computed: {
    // å½“å‰é€‰ä¸­çš„ sku
    currentSku() {
      if (this.info && this.info.skus && this.info.skus.length > 0) {
        return this.info.skus[this.selectedSkuIndex] || {};
      }
      return {};
    },

    // é¡¶éƒ¨å±•ç¤ºå›¾ç‰‡ï¼šä¼˜å…ˆ sku.image â†’ info.images[0] â†’ info.pic
    displayPic() {
      if (this.currentSku && this.currentSku.image) {
        return this.currentSku.image;
      }
      if (this.info && this.info.images && this.info.images.length > 0) {
        return this.info.images[0];
      }
      return this.info.pic || "";
    },

    // é¡¶éƒ¨å±•ç¤ºä»·æ ¼ï¼šä¼˜å…ˆ sku.price â†’ info.price
    displayPrice() {
      if (this.currentSku && this.currentSku.price) {
        return this.currentSku.price;
      }
      return this.info.price || 0;
    },

    // â€œå·²é€‰ï¼šxxxâ€
    selectedSkuText() {
      if (!this.info.skus || this.info.skus.length === 0) {
        return "é»˜è®¤è§„æ ¼";
      }
      const sku = this.currentSku;
      if (!sku) return "é»˜è®¤è§„æ ¼";
      return sku.sku_name || "é»˜è®¤è§„æ ¼";
    },
  },

  methods: {
    /**
     * å¤–éƒ¨è°ƒç”¨ï¼šæ‰“å¼€å¼¹çª—
     * type: 'cart' | 'buy'
     */
    open(type) {
      this.btnType = type || "buy";

      if (!this.info.skus || this.info.skus.length === 0) {
        this.selectedSkuIndex = 0;
      } else if (this.selectedSkuIndex >= this.info.skus.length) {
        this.selectedSkuIndex = 0;
      }

      this.quantity = 1;

      if (this.$refs.CatPopup && this.$refs.CatPopup.$callMethod) {
        this.$refs.CatPopup.$callMethod("open");
      }
    },

    close() {
      if (this.$refs.CatPopup && this.$refs.CatPopup.$callMethod) {
        this.$refs.CatPopup.$callMethod("close");
      }
    },

    // é€‰æ‹© SKU
    selectSku(index) {
      this.selectedSkuIndex = index;
    },

    // æ”¹æ•°é‡
    changeQty(delta) {
      const next = this.quantity + delta;
      if (next < 1) return;
      this.quantity = next;
    },

    // â­â­ åŠ å…¥è´­ç‰©è½¦ï¼šçœŸæ­£è°ƒç”¨ /api/cart/add
    onAddCart() {
      if (!this.currentSku || !this.currentSku.sku_id) {
        uni.showToast({ title: "è¯·é€‰æ‹©è§„æ ¼", icon: "none" });
        return;
      }

      const openid = uni.getStorageSync("openid");
      if (!openid) {
        uni.showToast({ title: "è¯·å…ˆç™»å½•", icon: "none" });
        return;
      }

      const skuId = this.currentSku.sku_id;
      const qty = this.quantity;

      uni.showLoading({ title: "åŠ å…¥ä¸­..." });

      uni.request({
        url: `${API_BASE}/api/cart/add`,
        method: "POST",
        header: {
          "content-type": "application/json",
        },
        data: {
          openid: openid,
          sku_id: skuId,
          quantity: qty,
        },
        success: (res) => {
          const body = res.data || {};
          if (body.code === 200) {
            uni.showToast({
              title: body.msg || "å·²åŠ å…¥è´­ç‰©è½¦",
              icon: "success",
            });
            this.close();
          } else {
            uni.showToast({
              title: body.msg || "åŠ å…¥è´­ç‰©è½¦å¤±è´¥",
              icon: "none",
            });
          }
        },
        fail: () => {
          uni.showToast({
            title: "ç½‘ç»œé”™è¯¯ï¼Œè¯·ç¨åé‡è¯•",
            icon: "none",
          });
        },
        complete: () => {
          uni.hideLoading();
        },
      });
    },

    formatSkuName(sku, index) {
      const name = sku.sku_name || "è§„æ ¼ " + (index + 1);
      return name.replace(/\//g, "");
    },

    // ç«‹å³è´­ä¹°
    onBuy() {
      if (!this.currentSku || !this.currentSku.sku_id) {
        uni.showToast({ title: "è¯·é€‰æ‹©è§„æ ¼", icon: "none" });
        return;
      }

      const goodsId = this.info.id || 0;
      const sku = this.currentSku;
      const qty = this.quantity;

      const orderItem = {
        product_id: goodsId,
        sku_id: sku.sku_id,
        name: this.info.name,
        sku_name: sku.sku_name || this.selectedSkuText,
        price: sku.price || this.info.price || 0,
        quantity: qty,
        image: sku.image || this.displayPic,
        attr1: sku.attr1,
        attr2: sku.attr2,
        attr3: sku.attr3,
        attr4: sku.attr4,
      };

      uni.navigateTo({
        url: "/pages/ConfirmOrder/ConfirmOrder",
        success: (res) => {
          const eventChannel = res.eventChannel;
          eventChannel.emit("orderData", {
            items: [orderItem],
            from: "goodsDetail",
          });
        },
      });
    },
  },
};
</script>


