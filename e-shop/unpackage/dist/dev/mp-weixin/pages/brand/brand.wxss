.page {
  background-color: #f8f8f8;
}
.head-info {
  width: 100%;
  background-color: #ffffff;
}
.head-info .head-title {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  background-color: #ffffff;
}
.head-info .head-title .back {
  display: flex;
  align-items: center;
  justify-content: center;
}
.head-info .head-title .back .image {
  width: 48rpx;
  height: 48rpx;
}
.head-info .head-title .title {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.head-info .head-title .title .image {
  width: 280rpx;
  height: 48rpx;
}
.head-info .head-title .more {
  display: flex;
  align-items: center;
}
.head-info .head-title .more .image {
  width: 48rpx;
  height: 48rpx;
}
.banner-info {
  width: 100%;
  padding: 0 30rpx;
  margin-top: 20rpx;
}
.banner-info .banner {
  width: 100%;
  height: 300rpx;
}
.banner-info .banner .swiper {
  width: 100%;
  height: 300rpx;
}
.banner-info .banner .swiper .image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.brand-info {
  width: 100%;
  margin-top: 20rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.brand-info .brand-view {
  width: 100%;
  background-color: #0f0e13;
  border-radius: 20rpx 20rpx 0 0;
}
.brand-info .brand-view .classify-info {
  width: 100%;
  height: 100rpx;
}
.brand-info .brand-view .classify-info .classify-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
}
.brand-info .brand-view .classify-info .classify-item .item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 180rpx;
  height: 100rpx;
}
.brand-info .brand-view .classify-info .classify-item .item .text {
  font-size: 28rpx;
  color: #b5b4b9;
}
.brand-info .brand-view .classify-info .classify-item .item .line {
  position: absolute;
  bottom: 18rpx;
  width: 20%;
  height: 6rpx;
  background-color: transparent;
  border-radius: 8rpx;
}
.brand-info .brand-view .classify-info .classify-item .item .active {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}
.brand-info .brand-view .classify-info .classify-item .item .active-line {
  background-color: #ffffff;
}
.brand-info .brand-view .brand-list {
  width: 100%;
  margin-top: 10rpx;
  padding: 20rpx;
  background-color: #f7f7f7;
  border-radius: 20rpx 20rpx 0 0;
}
.brand-info .brand-view .brand-list .list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 240rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.brand-info .brand-view .brand-list .list .goods {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 1;
  height: 100%;
  padding: 0 20rpx;
}
.brand-info .brand-view .brand-list .list .goods .pic {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
}
.brand-info .brand-view .brand-list .list .goods .pic .image {
  width: 140rpx;
  height: 140rpx;
}
.brand-info .brand-view .brand-list .list .goods .pic .price {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-top: 6rpx;
}
.brand-info .brand-view .brand-list .list .goods .pic .price .min {
  font-size: 24rpx;
  font-weight: bold;
  color: #0f0e13;
}
.brand-info .brand-view .brand-list .list .goods .pic .price .max {
  font-size: 34rpx;
  font-weight: bold;
  color: #0f0e13;
}
.brand-info .brand-view .brand-list .list .brand {
  position: relative;
  width: 150rpx;
  height: 100%;
}
.brand-info .brand-view .brand-list .list .brand .bg {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.brand-info .brand-view .brand-list .list .brand .logo {
  position: absolute;
  bottom: 60rpx;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}
.brand-info .brand-view .brand-list .list .brand .logo .image {
  width: 130rpx;
  height: 60rpx;
  border-radius: 80rpx;
  background-color: #ffffff;
}