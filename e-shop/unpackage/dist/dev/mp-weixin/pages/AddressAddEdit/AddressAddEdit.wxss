.page {
  background-color: #f8f8f8;
}
.address-info {
  margin: 30rpx;
  padding: 0 30rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
}
.address-info .input-text {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #f8f8f8;
}
.address-info .input-text .title {
  display: flex;
  align-items: center;
}
.address-info .input-text .title .text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}
.address-info .input-text .content {
  display: flex;
  align-items: center;
}
.address-info .input-text .content .input {
  width: 320rpx;
  font-size: 28rpx;
  color: #333333;
  text-align: right;
}
.address-info .input-area-text {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 180rpx;
  border-bottom: 1px solid #f8f8f8;
  padding: 20rpx 0;
}
.address-info .input-area-text .title {
  display: flex;
  margin-right: 20rpx;
}
.address-info .input-area-text .title .text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}
.address-info .input-area-text .content {
  flex: 1;
  height: 100%;
}
.address-info .input-area-text .content .textarea {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #333333;
}
.address-tag {
  margin: 0 30rpx;
  padding: 0 30rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
}
.address-tag .tag-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #f8f8f8;
}
.address-tag .tag-item .title {
  display: flex;
  width: 200rpx;
}
.address-tag .tag-item .title .text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}
.address-tag .tag-item .item {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  flex: 1;
  height: 100%;
}
.address-tag .tag-item .item .tag {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 50rpx;
  margin-right: 20rpx;
  border: 1px solid #f8f8f8;
  border-radius: 60rpx;
}
.address-tag .tag-item .item .tag .text {
  font-size: 26rpx;
  color: #333333;
}
.address-tag .default-address {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 140rpx;
}
.address-tag .default-address .title-desc {
  flex: 1;
}
.address-tag .default-address .title-desc .title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}
.address-tag .default-address .title-desc .desc {
  font-size: 24rpx;
  color: #333333;
}
.address-tag .default-address .check {
  display: flex;
  align-items: center;
}
.footer-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  min-height: 120rpx;
  padding: 0 30rpx;
  background-color: #ffffff;
}
.footer-btn .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 80rpx;
  background-color: #fe9a5c;
  border-radius: 40rpx;
}
.footer-btn .btn .text {
  font-size: 28rpx;
  color: #ffffff;
}