.page {
  background-color: #f8f8f8;
}
.tab-info {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
}
.tab-info .tab-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
}
.tab-info .tab-item .item {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 100%;
}
.tab-info .tab-item .item .text {
  font-size: 28rpx;
  color: #333333;
}
.tab-info .tab-item .item .line {
  position: absolute;
  bottom: 16rpx;
  width: 30%;
  height: 8rpx;
  background-color: transparent;
  border-radius: 8rpx;
}
.tab-info .tab-item .item .active {
  font-size: 32rpx;
  font-weight: bold;
  color: #fe9a5c;
}
.tab-info .tab-item .item .active-line {
  background-color: #fe9a5c;
}
.coupon-info {
  width: 100%;
  margin-top: 120rpx;
}
.coupon-info .coupon-list {
  width: 100%;
  padding: 0 30rpx;
}
.coupon-info .coupon-list .list {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 230rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
}
.coupon-info .coupon-list .list .goods-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 1;
  height: 100%;
  padding: 0 20rpx;
}
.coupon-info .coupon-list .list .goods-item .item {
  width: 140rpx;
  margin-right: 10rpx;
}
.coupon-info .coupon-list .list .goods-item .item .pic {
  display: flex;
  align-items: center;
}
.coupon-info .coupon-list .list .goods-item .item .pic .image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
}
.coupon-info .coupon-list .list .goods-item .item .price {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.coupon-info .coupon-list .list .goods-item .item .price .text {
  font-size: 24rpx;
  font-weight: bold;
  color: #333333;
}
.coupon-info .coupon-list .list .coupon-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 180rpx;
  border-left: 1px dashed #f8f8f8;
}
.coupon-info .coupon-list .list .coupon-data .full-price {
  display: flex;
  align-items: center;
}
.coupon-info .coupon-list .list .coupon-data .full-price .text {
  font-size: 24rpx;
  color: #aaaaaa;
}
.coupon-info .coupon-list .list .coupon-data .price {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}
.coupon-info .coupon-list .list .coupon-data .price .text {
  font-size: 42rpx;
  font-weight: bold;
  color: #fe9a5c;
}
.coupon-info .coupon-list .list .coupon-data .price .min {
  font-size: 28rpx;
  font-weight: bold;
  color: #fe9a5c;
  margin-bottom: 6rpx;
}
.coupon-info .coupon-list .list .coupon-data .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 140rpx;
  height: 40rpx;
  margin-top: 20rpx;
  background-color: #fe9a5c;
  border-radius: 40rpx;
}
.coupon-info .coupon-list .list .coupon-data .btn .text {
  font-size: 24rpx;
  color: #ffffff;
}