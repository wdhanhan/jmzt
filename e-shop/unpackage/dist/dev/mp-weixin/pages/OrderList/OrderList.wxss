.page {
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 顶部搜索栏 */
.head-info {
  width: 100%;
  height: 100rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.head-info .back {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-right: 10rpx;
}
.head-info .back .back-icon {
  width: 40rpx;
  height: 40rpx;
}
.head-info .search {
  flex: 1;
  height: 64rpx;
  background-color: #f3f3f3;
  border-radius: 32rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.head-info .search .search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}
.head-info .search .search-input {
  flex: 1;
  height: 100%;
  font-size: 26rpx;
  color: #333333;
}
.head-info .search-btn {
  margin-left: 16rpx;
}
.head-info .search-btn .search-text {
  font-size: 28rpx;
  color: #333333;
}

/* Tabs */
.tabs {
  margin-top: 40rpx;
  width: 100%;
  height: 88rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}
.tabs .tab-item {
  flex: 1;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
}
.tabs .tab-text {
  font-size: 28rpx;
  color: #aaaaaa;
}
.tabs .tab-text-active {
  color: #fe9a5c;
  font-weight: bold;
}
.tabs .tab-line {
  margin-top: 8rpx;
  width: 40rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background-color: transparent;
}
.tabs .tab-line-active {
  background-color: #fe9a5c;
}

/* 列表区域 */
.order-list {
  padding: 20rpx;
  box-sizing: border-box;
  /* 商品块 */
}
.order-list .loading {
  padding: 40rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #aaaaaa;
}
.order-list .empty {
  padding-top: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.order-list .empty .empty-image {
  width: 260rpx;
  height: 260rpx;
  margin-bottom: 20rpx;
}
.order-list .empty .empty-text {
  font-size: 26rpx;
  color: #aaaaaa;
}
.order-list .order-card {
  margin-bottom: 24rpx;
  padding: 24rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.04);
}
.order-list .order-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.order-list .order-header .order-no {
  font-size: 26rpx;
  color: #333333;
}
.order-list .order-header .order-status {
  padding: 4rpx 14rpx;
  border-radius: 26rpx;
  font-size: 24rpx;
}
.order-list .order-header .status-0 {
  background-color: #fff7e6;
  color: #ff9500;
}
.order-list .order-header .status-1 {
  background-color: #e8fff2;
  color: #2bb673;
}
.order-list .order-header .status-2 {
  background-color: #e6f4ff;
  color: #1b74e4;
}
.order-list .order-header .status-3 {
  background-color: #ffecec;
  color: #e64242;
}
.order-list .divider {
  margin: 18rpx 0;
  height: 2rpx;
  background-color: #f1f1f1;
}
.order-list .goods-block {
  display: flex;
  flex-direction: row;
}
.order-list .goods-thumb {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
}
.order-list .goods-thumb .goods-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  background-color: #f5f5f5;
}
.order-list .goods-thumb .goods-noimg {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  background-color: #f5f5f5;
  align-items: center;
  justify-content: center;
  display: flex;
  font-size: 24rpx;
  color: #aaaaaa;
}
.order-list .goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.order-list .goods-info .goods-title {
  margin-bottom: 6rpx;
}
.order-list .goods-info .goods-title .goods-name {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}
.order-list .goods-info .goods-sku {
  margin-bottom: 4rpx;
}
.order-list .goods-info .goods-sku .sku-text {
  font-size: 24rpx;
  color: #aaaaaa;
}
.order-list .goods-info .goods-attrs {
  margin-bottom: 4rpx;
}
.order-list .goods-info .goods-attrs .attr-text {
  font-size: 22rpx;
  color: #aaaaaa;
  margin-right: 12rpx;
}
.order-list .goods-info .goods-qty-line {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.order-list .goods-info .goods-qty-line .goods-qty {
  font-size: 24rpx;
  color: #333333;
}
.order-list .goods-info .goods-qty-line .more-goods {
  font-size: 22rpx;
  color: #aaaaaa;
}
.order-list .user-info .user-line {
  display: block;
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 6rpx;
}
.order-list .bottom-info {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}
.order-list .bottom-info .amount-box .amount-label {
  font-size: 24rpx;
  color: #aaaaaa;
}
.order-list .bottom-info .amount-box .amount-value {
  margin-top: 4rpx;
  font-size: 30rpx;
  color: #ff3b30;
  font-weight: bold;
}
.order-list .bottom-info .time-box .time-text {
  font-size: 24rpx;
  color: #aaaaaa;
}