.page {
  background-color: #f8f8f8;
  padding-bottom: 30rpx;
}
/*搜索*/
.head-search {
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.head-search .search-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  background-color: #f8f8f8;
  border-radius: 35rpx;
}
.head-search .search-info .text {
  color: #aaaaaa;
  font-size: 24rpx;
}
.head-search .search-info .image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 20rpx;
}
.head-search .scan-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}
.head-search .scan-icon .image {
  width: 48rpx;
  height: 48rpx;
}
/*banner*/
.banner-info {
  position: relative;
  width: 100%;
  height: 340rpx;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}
.banner-info .swiper {
  width: 100%;
  height: 340rpx;
}
.banner-info .swiper .image {
  width: 100%;
  height: 340rpx;
  border-radius: 20rpx;
}
.banner-info .indicator-dot {
  position: absolute;
  left: 0;
  bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
}
.banner-info .indicator-dot .dots {
  width: 16rpx;
  height: 16rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 10rpx;
  margin: 0 6rpx;
}
.banner-info .indicator-dot .active {
  width: 34rpx;
  height: 16rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
}
/*金刚区*/
.menu-info {
  width: 100%;
  height: 160rpx;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}
.menu-info .menu-list {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 160rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
}
.menu-info .menu-list .list {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 25%;
  height: 140rpx;
}
.menu-info .menu-list .list .image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}
.menu-info .menu-list .list .text {
  font-size: 28rpx;
  color: #333333;
}
/*瓷片区*/
.tile-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 300rpx;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}
.tile-info .tile-left {
  width: 49%;
  height: 300rpx;
}
.tile-info .tile-left .image {
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
}
.tile-info .tile-right {
  justify-content: space-between;
  width: 49%;
  height: 300rpx;
}
.tile-info .tile-right .tile {
  width: 100%;
  height: 140rpx;
}
.tile-info .tile-right .tile .image {
  width: 100%;
  height: 140rpx;
  border-radius: 20rpx;
}
.title-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  padding: 0 20rpx;
}
.title-info .title {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.title-info .title .line {
  width: 10rpx;
  height: 40rpx;
  background-color: #fe9a5c;
  border-radius: 10rpx;
  margin-right: 10rpx;
}
.title-info .title .tit {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}
.title-info .more {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.title-info .more .image {
  width: 48rpx;
  height: 48rpx;
}
/*每日推荐*/
.day-recommend {
  width: 100%;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}
.day-recommend .recommend-info {
  width: 100%;
  height: 420rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
}
.day-recommend .recommend-info .goods-list {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 320rpx;
  padding: 0 20rpx;
}
.day-recommend .recommend-info .goods-list .list {
  width: 200rpx;
  height: 100%;
  margin-right: 24rpx;
}
.day-recommend .recommend-info .goods-list .list .pic {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.day-recommend .recommend-info .goods-list .list .title {
  display: flex;
}
.day-recommend .recommend-info .goods-list .list .title .text {
  width: 100%;
  height: 70rpx;
  lines: 2;
  text-overflow: ellipsis;
  font-size: 28rpx;
  color: #333333;
}
.day-recommend .recommend-info .goods-list .list .price {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}
.day-recommend .recommend-info .goods-list .list .price .min {
  font-size: 20rpx;
  font-weight: bold;
  color: #fe9a5c;
  margin-bottom: 4rpx;
}
.day-recommend .recommend-info .goods-list .list .price .max {
  font-size: 30rpx;
  font-weight: bold;
  color: #fe9a5c;
}
/*猜你喜欢*/
.guess-like {
  width: 100%;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  background-color: #ffffff;
}
.guess-like .goods-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
}
.guess-like .goods-list .list {
  width: 334rpx;
  margin-bottom: 20rpx;
}
.guess-like .goods-list .list .pic {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 334rpx;
}
.guess-like .goods-list .list .pic .image {
  width: 334rpx;
  height: 334rpx;
  border-radius: 10rpx;
}
.guess-like .goods-list .list .title {
  display: flex;
  margin-top: 10rpx;
}
.guess-like .goods-list .list .title .text {
  lines: 2;
  text-overflow: ellipsis;
  width: 334rpx;
  height: 70rpx;
  font-size: 28rpx;
  color: #333333;
}
.guess-like .goods-list .list .price {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}
.guess-like .goods-list .list .price .min {
  font-size: 22rpx;
  font-weight: bold;
  color: #fe9a5c;
  margin-bottom: 4rpx;
}
.guess-like .goods-list .list .price .max {
  font-size: 36rpx;
  font-weight: bold;
  color: #fe9a5c;
}