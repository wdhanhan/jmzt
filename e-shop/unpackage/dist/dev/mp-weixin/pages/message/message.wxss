.page {
  background-color: #f8f8f8;
}
.tab-info {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
}
.tab-info .tab {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
}
.tab-info .tab .text {
  font-size: 28rpx;
  color: #333333;
}
.tab-info .tab .active {
  font-size: 30rpx;
  font-weight: bold;
  color: #fe9a5c;
}
.tab-info .tab .active-line {
  position: absolute;
  bottom: 16rpx;
  width: 20%;
  height: 8rpx;
  background-color: #fe9a5c;
  border-radius: 10rpx;
}
.message-info {
  width: 100%;
  margin-top: 120rpx;
}
.message-info .message-list {
  width: 100%;
  padding: 0 30rpx;
}
.message-info .message-list .date {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.message-info .message-list .date .text {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rpx 20rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 40rpx;
  font-size: 24rpx;
  color: #ffffff;
}
.message-info .message-list .list {
  width: 100%;
  height: 240rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
}
.message-info .message-list .list .title {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 60rpx;
}
.message-info .message-list .list .title .text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}
.message-info .message-list .list .info {
  display: flex;
  flex-direction: row;
  width: 100%;
}
.message-info .message-list .list .info .pic {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.message-info .message-list .list .info .pic .image {
  width: 140rpx;
  height: 140rpx;
}
.message-info .message-list .list .info .message {
  display: flex;
  align-items: center;
  flex: 1;
}
.message-info .message-list .list .info .message .text {
  font-size: 26rpx;
  color: #aaaaaa;
  line-height: 40rpx;
}