.page {
  background-color: #f8f8f8;
}
.evaluate-tab {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
}
.evaluate-tab .tab-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
}
.evaluate-tab .tab-item .item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  border: 1px solid #aaaaaa;
  border-radius: 50rpx;
}
.evaluate-tab .tab-item .item .text {
  font-size: 24rpx;
  color: #333333;
}
.evaluate-tab .tab-item .item .active-text {
  color: #fe9a5c;
}
.evaluate-tab .tab-item .active {
  border: 1px solid #fe9a5c;
}
.evaluate-item {
  width: 100%;
  margin-top: 100rpx;
  padding: 20rpx 30rpx;
}
.evaluate-item .item {
  width: 100%;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
}
.evaluate-item .item .user-star {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 70rpx;
}
.evaluate-item .item .user-star .pic {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.evaluate-item .item .user-star .pic .image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
.evaluate-item .item .user-star .name-star .name {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.evaluate-item .item .user-star .name-star .name .text {
  font-size: 24rpx;
  color: #333333;
}
.evaluate-item .item .user-star .name-star .star {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.evaluate-item .item .user-star .name-star .star .image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}
.evaluate-item .item .evaluate-content {
  width: 100%;
  margin-top: 10rpx;
}
.evaluate-item .item .evaluate-content .content {
  width: 100%;
  margin-bottom: 10rpx;
}
.evaluate-item .item .evaluate-content .content .text {
  width: 100%;
  font-size: 24rpx;
  color: #333333;
  line-height: 40rpx;
}
.evaluate-item .item .evaluate-content .img-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
  margin-bottom: 10rpx;
}
.evaluate-item .item .evaluate-content .img-item .img {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.evaluate-item .item .evaluate-content .img-item .img .image {
  width: 314rpx;
  height: 314rpx;
  border-radius: 10rpx;
}
.evaluate-item .item .evaluate-content .attr {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  margin-bottom: 10rpx;
}
.evaluate-item .item .evaluate-content .attr .text {
  font-size: 26rpx;
  color: #aaaaaa;
}