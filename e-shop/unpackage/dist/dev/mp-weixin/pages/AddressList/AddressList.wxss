.page {
  background-color: #f8f8f8;
}
.address-info {
  margin: 30rpx 30rpx 0;
  padding: 0 30rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
}
.address-info .item {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  padding: 30rpx 0;
  border-bottom: 1px solid #f8f8f8;
}
.address-info .item .address-data {
  flex: 1;
}
.address-info .item .address-data .address-city {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}
.address-info .item .address-data .address-city .text {
  font-size: 28rpx;
  color: #aaaaaa;
}
.address-info .item .address-data .address {
  width: 100%;
  margin-bottom: 10rpx;
}
.address-info .item .address-data .address .text {
  font-size: 38rpx;
  font-weight: bold;
  color: #333333;
}
.address-info .item .address-data .name-phone {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}
.address-info .item .address-data .name-phone .name {
  display: flex;
  margin-right: 10rpx;
}
.address-info .item .address-data .name-phone .name .text {
  font-size: 28rpx;
  color: #333333;
}
.address-info .item .address-data .name-phone .tag-item {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.address-info .item .address-data .name-phone .tag-item .tag {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rpx 10rpx;
  margin-right: 10rpx;
  background-color: #ff6e65;
  border-radius: 4rpx;
}
.address-info .item .address-data .name-phone .tag-item .tag .text {
  font-size: 20rpx;
  color: #ffffff;
}
.address-info .item .address-data .name-phone .tag-item .blue {
  background-color: #ffdb53;
}
.address-info .item .more {
  display: flex;
  align-items: center;
  justify-content: center;
}
.address-info .item .more .image {
  width: 38rpx;
  height: 38rpx;
}
.address-info .item:last-child {
  border-bottom: none;
}
.footer-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  min-height: 120rpx;
  padding: 0 30rpx;
  background-color: #ffffff;
}
.footer-btn .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 80rpx;
  background-color: #fe9a5c;
  border-radius: 40rpx;
}
.footer-btn .btn .text {
  font-size: 28rpx;
  color: #ffffff;
}