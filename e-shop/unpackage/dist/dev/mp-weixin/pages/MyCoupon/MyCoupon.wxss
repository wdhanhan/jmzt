.page {
  background-color: #f8f8f8;
}
.coupon-info {
  width: 100%;
  margin: 20rpx auto;
}
.coupon-info .coupon-list {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.coupon-info .coupon-list .list {
  position: relative;
  width: 100%;
  min-height: 200rpx;
  margin-bottom: 14rpx;
}
.coupon-info .coupon-list .list .bg {
  width: 100%;
  height: 200rpx;
}
.coupon-info .coupon-list .list .item {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 200rpx;
}
.coupon-info .coupon-list .list .item .info {
  flex: 1;
  padding: 0 30rpx;
}
.coupon-info .coupon-list .list .item .info .title .text {
  width: 100%;
  height: 80rpx;
  lines: 2;
  text-overflow: ellipsis;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #333333;
  font-weight: bold;
}
.coupon-info .coupon-list .list .item .info .date {
  margin-top: 10rpx;
}
.coupon-info .coupon-list .list .item .info .date .text {
  font-size: 24rpx;
  color: #333333;
}
.coupon-info .coupon-list .list .item .info .more {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}
.coupon-info .coupon-list .list .item .info .more .tit {
  font-size: 22rpx;
  color: #aaaaaa;
}
.coupon-info .coupon-list .list .item .info .more .more-icon {
  width: 28rpx;
  height: 28rpx;
}
.coupon-info .coupon-list .list .item .price-info {
  width: 220rpx;
}
.coupon-info .coupon-list .list .item .price-info .info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
}
.coupon-info .coupon-list .list .item .price-info .info .price {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: center;
}
.coupon-info .coupon-list .list .item .price-info .info .price .min {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 6rpx;
}
.coupon-info .coupon-list .list .item .price-info .info .price .max {
  font-size: 54rpx;
  font-weight: bold;
  color: #ffffff;
}
.coupon-info .coupon-list .list .item .price-info .info .full-price {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.coupon-info .coupon-list .list .item .price-info .info .full-price .text {
  font-size: 22rpx;
  font-weight: bold;
  color: #ffffff;
}
.coupon-info .coupon-list .list .item .price-info .info .use-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
}
.coupon-info .coupon-list .list .item .price-info .info .use-btn .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 140rpx;
  height: 40rpx;
  background-color: #ffffff;
  border-radius: 60rpx;
}
.coupon-info .coupon-list .list .item .price-info .info .use-btn .btn .text {
  font-size: 22rpx;
  color: #ff6e65;
}
.coupon-info .coupon-list .list .more-info {
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
}
.coupon-info .coupon-list .list .more-info .info {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 40rpx;
}
.coupon-info .coupon-list .list .more-info .info .title {
  display: flex;
  align-items: center;
}
.coupon-info .coupon-list .list .more-info .info .title .text {
  font-size: 24rpx;
  color: #aaaaaa;
}
.footer-info {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 100;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  min-height: 100rpx;
  background-color: #ffffff;
}
.footer-info .btn {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 100rpx;
}
.footer-info .btn .text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}
.footer-info .btn .line {
  position: absolute;
  right: 0;
  width: 2px;
  height: 30rpx;
  background-color: #f8f8f8;
}