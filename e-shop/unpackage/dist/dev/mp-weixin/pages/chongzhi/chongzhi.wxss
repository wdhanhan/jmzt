}
.bill-card .brand-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}
.bill-card .brand-area .icon-box {
  width: 80rpx;
  height: 80rpx;
  background: rgba(7, 193, 96, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}
.bill-card .brand-area .shop-name {
  font-size: 26rpx;
  color: #999;
}
.bill-card .amount-area {
  display: flex;
  align-items: baseline;
  color: #333;
  margin-bottom: 16rpx;
}
.bill-card .amount-area .currency {
  font-size: 40rpx;
  font-weight: 500;
  margin-right: 4rpx;
}
.bill-card .amount-area .num {
  font-size: 80rpx;
  font-weight: bold;
  line-height: 1;
  font-family: "DIN", sans-serif;
}
.bill-card .amount-area .dec {
  font-size: 40rpx;
  font-weight: 500;
}
.bill-card .status-tag {
  font-size: 24rpx;
  color: #ff9900;
  background: #fff8e8;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}
.bill-card .divider {
  width: 100%;
  height: 1px;
  border-top: 2rpx dashed #eee;
  position: relative;
  margin-bottom: 40rpx;
  /* 两侧圆孔装饰，模仿票据 */
}
.bill-card .divider::before, .bill-card .divider::after {
  content: "";
  position: absolute;
  top: -12rpx;
  width: 24rpx;
  height: 24rpx;
  background: #F2F3F5;
  border-radius: 50%;
}
.bill-card .divider::before {
  left: -52rpx;
}
.bill-card .divider::after {
  right: -52rpx;
}
.bill-card .detail-list {
  width: 100%;
}
.bill-card .detail-list .row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}
.bill-card .detail-list .row:last-child {
  margin-bottom: 0;
}
.bill-card .detail-list .row .label {
  font-size: 28rpx;
  color: #999;
}
.bill-card .detail-list .row .val {
  font-size: 28rpx;
  color: #333;
  text-align: right;
  max-width: 60%;
}
.bill-card .detail-list .row .highlight {
  font-weight: bold;
  font-size: 30rpx;
}

/* 底部按钮区 */
.action-area {
  margin-top: 60rpx;
}
.action-area .pay-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 30rpx rgba(7, 193, 96, 0.2);
  border: none;
  /* 去除小程序默认边框 */
}
.action-area .pay-btn::after {
  border: none;
}
.action-area .btn-hover {
  opacity: 0.9;
  transform: scale(0.98);
}
.action-area .safe-tips {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
}
.action-area .safe-tips text {
  font-size: 24rpx;
  color: #ccc;
}