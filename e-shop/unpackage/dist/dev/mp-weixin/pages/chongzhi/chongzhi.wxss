/* 页面背景：极简灰 */
.cashier-page {
  min-height: 100vh;
  background-color: #F2F3F5;
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
}

/* 顶部标题 */
.nav-title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  padding: 20rpx 0 40rpx;
}

/* 账单卡片：核心视觉 */
.bill-card {
  background: #fff;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.03);
  display: flex;
  flex-direction: column;
  align-items: center;
  /* 品牌区 */
