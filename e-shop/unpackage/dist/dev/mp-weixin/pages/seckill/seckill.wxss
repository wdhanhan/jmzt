.page {
  background-color: #ffffff;
}
.head-info {
  width: 100%;
  height: 400rpx;
  background-image: linear-gradient(to bottom, #e72d1e, #ffffff);
}
.head-info .head-back {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
}
.head-info .head-back .back {
  display: flex;
  align-items: center;
  justify-content: center;
}
.head-info .head-back .back .image {
  width: 48rpx;
  height: 48rpx;
}
.head-info .head-back .title {
  display: flex;
  align-items: center;
}
.head-info .head-back .title .image {
  width: 288rpx;
  height: 58rpx;
}
.head-info .head-back .more {
  display: flex;
  align-items: center;
}
.head-info .head-back .more .image {
  width: 48rpx;
  height: 48rpx;
}
.head-info .head-banner {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 180rpx;
  padding: 0 30rpx;
}
.head-info .head-banner .banner {
  width: 340rpx;
  height: 180rpx;
}
.head-info .head-banner .banner .swiper {
  width: 340rpx;
  height: 180rpx;
}
.head-info .head-banner .banner .swiper .image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.head-info .head-banner .brand-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  flex: 1;
}
.head-info .head-banner .brand-item .item {
  width: 140rpx;
  height: 180rpx;
  background-color: #ff7d65;
  border-radius: 30rpx;
  margin-right: 20rpx;
}
.head-info .head-banner .brand-item .item .pic {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 140rpx;
  height: 140rpx;
  background-color: #ffffff;
  border-radius: 30rpx;
}
.head-info .head-banner .brand-item .item .pic .image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 30rpx;
}
.head-info .head-banner .brand-item .item .title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 40rpx;
}
.head-info .head-banner .brand-item .item .title .text {
  font-size: 24rpx;
  color: #ffffff;
}
/*场次*/
.session-info {
  width: 100%;
  padding: 0 30rpx;
}
.session-info .session-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 140rpx;
  padding: 0 10rpx;
}
.session-info .session-item .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 170rpx;
  height: 120rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0);
  border-radius: 20rpx;
}
.session-info .session-item .item .time {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.session-info .session-item .item .time .text {
  font-size: 38rpx;
  font-weight: bold;
  color: #333333;
}
.session-info .session-item .item .time .text-active {
  color: #e72d1e;
}
.session-info .session-item .item .title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.session-info .session-item .item .title .text {
  font-size: 24rpx;
  font-weight: bold;
  color: #333333;
}
.session-info .session-item .item .title .text-active {
  color: #e72d1e;
}
.session-info .session-item .active {
  background-color: #ffffff;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
}
/*商品列表*/
.seckill-goods {
  width: 100%;
}
.seckill-goods .goods-item {
  width: 100%;
  padding: 30rpx;
}
.seckill-goods .goods-item .item {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  padding: 30rpx;
  margin-bottom: 30rpx;
  background-color: #ffffff;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.1);
  border-radius: 30rpx;
}
.seckill-goods .goods-item .item .pic {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.seckill-goods .goods-item .item .pic .image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 10rpx;
}
.seckill-goods .goods-item .item .info {
  flex: 1;
  height: 100%;
}
.seckill-goods .goods-item .item .info .goods-name {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  margin-bottom: 20rpx;
}
.seckill-goods .goods-item .item .info .goods-name .text {
  width: 100%;
  height: 80rpx;
  line-height: 40rpx;
  lines: 2;
  text-overflow: ellipsis;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}
.seckill-goods .goods-item .item .info .progress {
  width: 100%;
  height: 30rpx;
  background-color: #fbeae5;
  border-radius: 30rpx;
  overflow: hidden;
}
.seckill-goods .goods-item .item .info .progress .bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 100%;
  background-color: #ff583c;
  border-radius: 30rpx;
}
.seckill-goods .goods-item .item .info .progress .bar .text {
  font-size: 22rpx;
  color: #ffffff;
}
.seckill-goods .goods-item .item .info .price-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin-top: 40rpx;
}
.seckill-goods .goods-item .item .info .price-btn .price-info {
  display: flex;
  flex-direction: row;
}
.seckill-goods .goods-item .item .info .price-btn .price-info .price {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}
.seckill-goods .goods-item .item .info .price-btn .price-info .price .min {
  font-size: 24rpx;
  font-weight: bold;
  color: #ff583c;
  margin-bottom: 4rpx;
}
.seckill-goods .goods-item .item .info .price-btn .price-info .price .max {
  font-size: 42rpx;
  font-weight: bold;
  color: #ff583c;
}
.seckill-goods .goods-item .item .info .price-btn .price-info .old-price {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-left: 10rpx;
  margin-bottom: 4rpx;
}
.seckill-goods .goods-item .item .info .price-btn .price-info .old-price .text {
  font-size: 24rpx;
  color: #aaaaaa;
  -webkit-text-decoration-line: line-through;
          text-decoration-line: line-through;
}
.seckill-goods .goods-item .item .info .price-btn .btn-info {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.seckill-goods .goods-item .item .info .price-btn .btn-info .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 60rpx;
  background-image: linear-gradient(to right, #fd975a, #ff4d29);
  border-radius: 40rpx;
}
.seckill-goods .goods-item .item .info .price-btn .btn-info .btn .text {
  font-size: 32rpx;
  color: #ffffff;
}