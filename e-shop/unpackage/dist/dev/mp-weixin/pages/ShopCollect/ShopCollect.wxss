.page {
  background-color: #f8f8f8;
}
.head-info {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #ffffff;
}
.head-info .back {
  display: flex;
  align-items: center;
  justify-content: center;
}
.head-info .back .image {
  width: 48rpx;
  height: 48rpx;
}
.head-info .title {
  display: flex;
  align-items: center;
}
.head-info .title .text {
  font-size: 32rpx;
  color: #333333;
}
.head-info .edit {
  display: flex;
  align-items: center;
}
.head-info .edit .text {
  font-size: 26rpx;
  color: #333333;
}
.shop-info {
  width: 100%;
  padding: 0 30rpx;
  margin-top: 20rpx;
}
.shop-info .shop-list {
  width: 100%;
}
.shop-info .shop-list .list {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 340rpx;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
}
.shop-info .shop-list .list .check {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.shop-info .shop-list .list .check .image {
  width: 38rpx;
  height: 38rpx;
}
.shop-info .shop-list .list .shop-right {
  flex: 1;
  height: 100%;
}
.shop-info .shop-list .list .shop-right .shop-data {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 140rpx;
}
.shop-info .shop-list .list .shop-right .shop-data .logo {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.shop-info .shop-list .list .shop-right .shop-data .logo .image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 60rpx;
}
.shop-info .shop-list .list .shop-right .shop-data .shop {
  flex: 1;
}
.shop-info .shop-list .list .shop-right .shop-data .shop .name {
  width: 100%;
  margin-bottom: 20rpx;
}
.shop-info .shop-list .list .shop-right .shop-data .shop .name .text {
  font-size: 32rpx;
  color: #333333;
}
.shop-info .shop-list .list .shop-right .shop-data .shop .tag-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}
.shop-info .shop-list .list .shop-right .shop-data .shop .tag-item .star {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 20rpx;
}
.shop-info .shop-list .list .shop-right .shop-data .shop .tag-item .star .image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 4rpx;
}
.shop-info .shop-list .list .shop-right .shop-data .shop .tag-item .item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 2rpx 10rpx;
  margin-right: 20rpx;
  background-color: #fe9a5c;
  border-radius: 4rpx;
}
.shop-info .shop-list .list .shop-right .shop-data .shop .tag-item .item .text {
  font-size: 22rpx;
  color: #ffffff;
}
.shop-info .shop-list .list .shop-right .goods-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 200rpx;
  margin-top: 10rpx;
}
.shop-info .shop-list .list .shop-right .goods-item .item {
  display: flex;
  align-items: center;
  margin-right: 10rpx;
}
.shop-info .shop-list .list .shop-right .goods-item .item .image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}
.footer-check {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 100;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  min-height: 100rpx;
  padding: 0 30rpx;
  background-color: #ffffff;
}
.footer-check .check {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.footer-check .check .image {
  width: 38rpx;
  height: 38rpx;
  margin-right: 20rpx;
}
.footer-check .check .text {
  font-size: 28rpx;
  color: #333333;
}
.footer-check .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 240rpx;
  height: 70rpx;
  background-image: linear-gradient(to right, #fb9e6d, #ff6e37);
  border-radius: 40rpx;
}
.footer-check .btn .text {
  font-size: 28rpx;
  color: #ffffff;
}