.page {
  background-color: #ffffff;
}
.classify-main {
  position: fixed;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
}
.classify-main .classify-left {
  width: 25%;
  height: 100%;
  background-color: #f8f8f8;
}
.classify-main .classify-left .item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 120rpx;
}
.classify-main .classify-left .item .line {
  display: none;
}
.classify-main .classify-left .item .text {
  font-size: 28rpx;
  color: #333333;
}
.classify-main .classify-left .item .line-active {
  position: absolute;
  left: 0;
  display: flex;
  width: 8rpx;
  height: 40rpx;
  background-color: #fe9a5c;
  border-radius: 8rpx;
}
.classify-main .classify-left .item .text-active {
  color: #fe9a5c;
}
.classify-main .active {
  position: relative;
  background-color: #ffffff;
}
.classify-main .classify-right {
  width: 75%;
  height: 100%;
  background-color: #ffffff;
  padding: 0 20rpx;
}
.classify-main .classify-right .goods-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}
.classify-main .classify-right .goods-item .goods-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
}
.classify-main .classify-right .goods-item .goods-info {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.classify-main .classify-right .goods-item .goods-info .goods-name {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
}
.classify-main .classify-right .goods-item .goods-info .goods-price {
  font-size: 30rpx;
  color: #fe9a5c;
  font-weight: bold;
}
.classify-main .classify-right .empty {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #aaaaaa;
}