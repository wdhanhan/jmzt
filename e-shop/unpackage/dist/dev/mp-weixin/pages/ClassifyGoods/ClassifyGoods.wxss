.page {
  background-color: #f8f8f8;
}
.classify-info {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  padding: 20rpx 0;
}
.classify-info .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 20%;
  height: 140rpx;
  margin-bottom: 20rpx;
}
.classify-info .item .image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
  border-radius: 20rpx;
}
.classify-info .item .text {
  font-size: 28rpx;
  color: #333333;
}
.new-goods {
  margin: 0 30rpx;
  height: 300rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
}
.new-goods .title-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 80rpx;
  padding: 0 30rpx;
}
.new-goods .title-info .title {
  display: flex;
  align-items: center;
}
.new-goods .title-info .title .text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}
.new-goods .goods-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  padding: 0 30rpx;
  margin-top: 10rpx;
}
.new-goods .goods-item .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.new-goods .goods-item .item .pic {
  display: flex;
  align-items: center;
}
.new-goods .goods-item .item .pic .image {
  width: 142rpx;
  height: 142rpx;
}
.new-goods .goods-item .item .price {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.new-goods .goods-item .item .price .text {
  font-weight: bold;
  font-size: 28rpx;
  color: #ff6e65;
}
.goods-info {
  width: 100%;
  margin-top: 20rpx;
}
.goods-info .goods-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
  padding: 0 30rpx;
}
.goods-info .goods-list .list {
  width: 334rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
}
.goods-info .goods-list .list .pic {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 334rpx;
}
.goods-info .goods-list .list .pic .image {
  width: 334rpx;
  height: 334rpx;
  border-radius: 10rpx;
}
.goods-info .goods-list .list .title {
  display: flex;
  margin-top: 10rpx;
}
.goods-info .goods-list .list .title .text {
  lines: 2;
  text-overflow: ellipsis;
  padding: 0 20rpx;
  width: 334rpx;
  height: 70rpx;
  font-size: 28rpx;
  color: #333333;
}
.goods-info .goods-list .list .price {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  padding: 0 20rpx;
}
.goods-info .goods-list .list .price .min {
  font-size: 22rpx;
  font-weight: bold;
  color: #ff6e65;
  margin-bottom: 4rpx;
}
.goods-info .goods-list .list .price .max {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6e65;
}