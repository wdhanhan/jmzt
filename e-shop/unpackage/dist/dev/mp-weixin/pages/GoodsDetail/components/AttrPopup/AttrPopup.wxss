.sku-item {
  padding: 20rpx 0;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.sku-item.active {
  background-color: #fef5f0;
}
.sku-left {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.sku-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}
.sku-right {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.sku-name .text {
  font-size: 28rpx;
  color: #333;
}
.sku-price-stock {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.sku-price-stock .price {
  font-size: 30rpx;
  font-weight: 600;
  color: #ff3b30;
}
.sku-price-stock .stock {
  font-size: 24rpx;
  color: #999;
}
.empty-sku {
  padding: 40rpx 0;
  text-align: center;
}
.empty-sku .text {
  font-size: 26rpx;
  color: #999;
}