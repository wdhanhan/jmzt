.head-info {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  z-index: 100;
}
.head-info .search-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
}
.head-info .search-info .back {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100rpx;
  height: 100%;
}
.head-info .search-info .back .image {
  width: 58rpx;
  height: 58rpx;
}
.head-info .search-info .search {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 1;
  height: 60rpx;
  padding: 0 30rpx;
  margin-right: 20rpx;
  background-color: #f8f8f8;
  border-radius: 30rpx;
}
.head-info .search-info .search .image {
  width: 38rpx;
  height: 38rpx;
  margin-right: 10rpx;
}
.head-info .search-info .search .input {
  flex: 1;
  height: 100%;
  font-size: 26rpx;
  color: #333333;
}
.head-info .search-info .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 50rpx;
  background-image: linear-gradient(to right, #fb9e6d, #ff6e37);
  border-radius: 30rpx;
}
.head-info .search-info .btn .text {
  font-size: 26rpx;
  color: #ffffff;
}
.filtrate-info {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  width: 100%;
  height: 80rpx;
  padding: 0 30rpx;
  background-color: #ffffff;
}
.filtrate-info .filtrate-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100%;
}
.filtrate-info .filtrate-item .item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 33%;
}
.filtrate-info .filtrate-item .item .title {
  display: flex;
}
.filtrate-info .filtrate-item .item .title .text {
  font-size: 28rpx;
  color: #333333;
}
.filtrate-info .filtrate-item .item .cut {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.filtrate-info .filtrate-item .item .cut .image {
  width: 34rpx;
  height: 34rpx;
}
.filtrate-info .filtrate-item .item .cut .up {
  width: 28rpx;
  height: 28rpx;
}
.filtrate-info .filtrate-item .item .icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}
.filtrate-info .filtrate-item .item .icon .image {
  width: 30rpx;
  height: 30rpx;
}
.filtrate-info .filtrate-item .active .title .text {
  color: #fe9a5c;
}
/*商品*/
.goods-info {
  width: 100%;
  padding: 0 30rpx;
  margin-top: 80rpx;
  background-color: #ffffff;
}
.goods-info .goods-list {
  width: 100%;
  margin-top: 20rpx;
}
.goods-info .goods-list .list {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.goods-info .goods-list .list .pic {
  margin-right: 20rpx;
}
.goods-info .goods-list .list .pic .image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.goods-info .goods-list .list .info {
  display: flex;
  flex-direction: column;
  flex: 1;
}
.goods-info .goods-list .list .info .title {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.goods-info .goods-list .list .info .title .text {
  width: 100%;
  height: 70rpx;
  font-size: 28rpx;
  color: #333333;
  lines: 2;
  text-overflow: ellipsis;
}
.goods-info .goods-list .list .info .sales-volume {
  display: flex;
}
.goods-info .goods-list .list .info .sales-volume .text {
  font-size: 26rpx;
  color: #aaaaaa;
}
.goods-info .goods-list .list .info .price-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
}
.goods-info .goods-list .list .info .price-info .price {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}
.goods-info .goods-list .list .info .price-info .price .min {
  font-size: 22rpx;
  color: #fe9a5c;
  margin-bottom: 4rpx;
}
.goods-info .goods-list .list .info .price-info .price .max {
  font-size: 34rpx;
  font-weight: bold;
  color: #fe9a5c;
}
.goods-info .goods-list .list .info .price-info .old-price {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}
.goods-info .goods-list .list .info .price-info .old-price .text {
  font-size: 24rpx;
  color: #aaaaaa;
  -webkit-text-decoration-line: line-through;
          text-decoration-line: line-through;
}
.goods-info .goods-list .list .info .shop-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
}
.goods-info .goods-list .list .info .shop-info .name {
  display: flex;
  align-items: center;
}
.goods-info .goods-list .list .info .shop-info .name .text {
  font-size: 26rpx;
  color: #aaaaaa;
}
.goods-info .goods-list .list .info .shop-info .more {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}
.goods-info .goods-list .list .info .shop-info .more .text {
  font-size: 26rpx;
  color: #aaaaaa;
}
.goods-info .goods-list .list .info .shop-info .more .image {
  width: 28rpx;
  height: 28rpx;
}